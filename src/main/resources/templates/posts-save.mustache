{{>layout/header}}
<h1>POST RESISTER</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title"> TITLE </label>
                <input type="text" class="form-control" id="title" placeholder="Type Title">
            </div>
            <div class="form-group">
                <label for="author"> AUTHOR </label>
                <input type="text" class="form-control" id="author" placeholder="Type Author">
            </div>
            <div class="form-group">
                <label for="content"> CONTENT </label>
                <textarea class="form-control" id="content" placeholder="Type Content"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary"> CANCEL </a>
        <button type="button" class="btn btn-primary" id="btn-save"> SUBMIT </button>
    </div>
</div>
{{>layout/footer}}